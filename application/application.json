[
	{
		"header": "Your Name & Age? (In Real Life)",
		"input": [
			[
				{
					"type": "text",
					"placeholder": "First Name",
					"required": true,
					"name": "first_name",
					"validation": {
						"pattern": "^[a-zA-Z]+$",
						"length": { "min": 2, "max": 10 }
					}
				},
				{
					"type": "text",
					"placeholder": "Last Name",
					"required": true,
					"name": "last_name",
					"validation": {
						"pattern": "^[a-zA-Z]+$",
						"length": { "min": 2, "max": 10 }
					}
				}
			],
			{
				"type": "number",
				"placeholder": "Age",
				"required": true,
				"name": "age",
				"validation": {
					"pattern": "^[0-9]+$",
					"value": { "min": 16, "max": 80 }
				}
			}
		]
	},
	{
		"header": "Describe the type of character you intend to create and role-play.",
		"input": [
			{
				"type": "checkbox",
				"required": true,
				"name": "character_type",
				"options": [
					{ "label": "Govt. Job", "value": "govt" },
					{ "label": "Civilian", "value": "civilian" },
					{ "label": "Gangster", "value": "gangster" },
					{ "label": "Other", "value": "other", "toggleReason": true }
				]
			},
			{
				"type": "textarea",
				"placeholder": "Explain your character background story (Min 50 words)",
				"required": true,
				"name": "character_background",
				"validation": {
					"length": { "min": 50, "max": 500 }
				}
			}
		]
	},
	{
		"header": "Did You have Read Our Rules & Terms?",
		"input": [
			{
				"type": "radio",
				"required": true,
				"name": "read_rules",
				"options": [
					{ "label": "Yes", "value": "yes" },
					{ "label": "No", "value": "no" }
				]
			}
		]
	},
	{
		"header": "How you know about Universe RP?",
		"input": [
			{
				"type": "checkbox",
				"required": true,
				"name": "source_of_info",
				"options": [
					{ "label": "Facebook", "value": "facebook" },
					{ "label": "Youtube", "value": "youtube" },
					{ "label": "Instagram", "value": "instagram" },
					{ "label": "Friend/Relative", "value": "friend" },
					{ "label": "Others", "value": "other", "toggleReason": true }
				]
			},
			{
				"type": "text",
				"placeholder": "Then where?",
				"required": true,
				"name": "other_source",
				"conditional": true,
				"parent": "source_of_info"
			}
		]
	},
	{
		"header": "Introduce yourself and your motive to play on our server! (In Real Life)",
		"input": [
			{
				"type": "textarea",
				"placeholder": "Please Write The Answer Here",
				"required": false,
				"name": "self_introduction"
			}
		]
	}
]
